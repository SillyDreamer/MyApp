<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryDarkColor</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryDarkColor</item>


        <item name="colorControlNormal">@color/secondaryDarkColor</item>
        <item name="colorControlActivated">@color/primaryDarkColor</item>
        <item name="colorControlHighlight">@color/secondaryLightColor</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>

        <item name="colorButtonNormal">@color/primaryDarkColor</item>
        <item name="android:colorButtonNormal">@color/primaryDarkColor</item>
    </style>

</resources>
